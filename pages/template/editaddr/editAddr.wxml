<!--pages/person/editAddr/editAddr.wxml-->
<template name="editaddr">
  <view class='form'>
    <view class='border_bottom'>
      <text>姓名</text>
      <input placeholder-class='placeholder_class' placeholder='请输入维修联系人姓名'></input>
    </view>
    <view class='border_bottom'>
      <text>电话</text>
      <input placeholder-class='placeholder_class' type='number' placeholder='请输入联系人姓名，不支持座机'></input>
    </view>
    <view class='border_bottom'>
      <text>所在区域</text>
      <input placeholder-class='placeholder_class' disabled placeholder='请选择'></input>
      <image src='/img/icon_arrow.png'></image>
    </view>
    <view>
      <text>详细地址</text>
      <textarea placeholder-class='placeholder_class' placeholder='请输入需要维修的详细地址，便于维修小哥上门服务'></textarea>
    </view>
  </view>
  <button class='submit'>保存</button>
</template>