/* pages/status/status/register.wxss */

.register_wrap {
  margin-top: 20rpx;
}

.register_item {
  background: #fff;
  height: 103rpx;
  line-height: 103rpx;
}

.register_item image {
  width: 42rpx;
  height: 42rpx;
  display: inline-block;
  vertical-align: top;
  margin-left: 40rpx;
  margin-top: 28rpx;
}

.register_item view {
  width: 645rpx;
  display: inline-block;
  height: 103rpx;
  vertical-align: top;
  margin-left: 25rpx;
}

.register_item input {
  width: 460rpx;
  height: 100%;
  display: inline-block;
  vertical-align: top;
  font-size: 27rpx;
  color: #333;
}

.register_item .capcha {
  width: 150rpx;
  display: inline-block;
  font-size: 25rpx;
  vertical-align: top;
  line-height: 103rpx;
  color: #fb870d;
}

.agreement{
  font-size: 25rpx;
  color: #999;
  margin-top: 25rpx;
}

.agreement text{
  font-size: 25rpx;
  color: #4c91f8;
}

.button{
  margin-top: 80rpx;
}

.btn{
    display: block;
    width: 650rpx;
    height: 85rpx;
    border-radius: 10rpx;
    font-size: 34rpx;
    color: #fff;
    box-sizing: border-box;
    line-height: 85rpx;
    text-align: center;
    margin-top: 50rpx
}

.btn_login{
  background: #fb870d;
}
.forget{
  font-size: 25rpx;
  color: #4c91f8;
  margin-left: 50rpx;
  margin-top: 20rpx;
}

.tip{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  text-align: center;
  font-size: 27rpx;
  padding-bottom: 30rpx;
  color: #999;
}
.tip .text{line-height: 50rpx;}
.tip image{width: 42rpx; height: 42rpx; vertical-align: middle;}

