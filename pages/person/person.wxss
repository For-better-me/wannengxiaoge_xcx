/* pages/person/person.wxss */
.personTop{
  padding: 53rpx 30rpx;
  background: #fff;
  overflow: hidden;
}
.headImg{
  width: 116rpx;
  height: 116rpx;
  float: left;
  border-radius: 100%;
}
.headImg image{
  display: block;
  width: 100%;
  height: 100%;
}
.personTop .personInfo{
  float: left;
  margin-left: 50rpx;
}
.personInfo text{
  display: inline-block;
}
.personInfo .name{
  font-size: 32rpx;
  margin-top: 20rpx;
  margin-right: 20rpx;
}
.personInfo .tel{
  display: block;
  font-size: 25rpx;
  color: #666;
  margin-top: 10rpx;
}
.sex{
  width: 30rpx;
  height: 30rpx;
}
.icon_arrow{
  width: 12rpx;
  height: 21rpx;
  float: right;
  margin-top: 58rpx;
}
.myOrder{
  background: #fff;
  margin-top: 20rpx;
  padding: 30rpx;
  overflow: hidden;
}
.fl{
  float: left;
}
.fr{
  float: right;
}
.myOrder .fl{
  font-size: 28rpx;
}
.myOrder .fr{
  font-size: 24rpx;
  color: #999;
}
.myOrder image{
  width: 12rpx;
  height: 21rpx;
  margin: 7rpx 0 0 20rpx;
}
.ul{
  background: #fff;
  overflow: hidden;
  padding: 26rpx 0 40rpx;
}
.ul view{
  width: 33.33%;
  float: left;
  text-align: center;
}
.ul .li1 image{
  width: 34rpx;
  height: 38rpx;
}
.ul .li2 image{
  width: 38rpx;
  height: 38rpx;
}
.ul .li3 image{
  width: 38rpx;
  height: 37rpx;
}
.ul view text{
  display: block;
  margin-top: 5rpx;
  color: #666; 
}
.m_top {
  margin-top: 20rpx;
  background: #fff;
  overflow: hidden;
  padding-left: 30rpx;
}
.link{
  overflow: hidden;
}
.link1 image{
  width: 30rpx;
  height: 38rpx;
}
.link2 image{
  width: 38rpx;
  height: 38rpx;
}
.link3 image{
  width: 40rpx;
  height: 40rpx;
}
.link4 image{
  width: 37rpx;
  height: 37rpx;
}
.link5 image{
  width: 39rpx;
  height: 39rpx;
  float: left;
}
.link image{
  float: left;
  margin-top: 40rpx;
}
.link view{
  float: right;
  font-size: 29rpx;
  width: 90%;
  box-sizing: border-box;
  padding: 40rpx 30rpx 40rpx 0;
}
.link view image{
   float: right; 
  width: 12rpx;
  height: 21rpx;
  margin-top: 14rpx;
}