/* pages/index/search/search.wxss */
.search_box{
  width: 100%;
  height: 95rpx;
  background: #fff;
  position: relative;
}
.search_box image{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 95rpx;
}
.search_box input{
    display: block;
    width: 630rpx;
    float: right;
    font-size: 27rpx;
    background: transparent;
    margin-right: 30rpx;
    height: 100%;
}
.search_recommend{
  width: 100%;
  margin-top: 20rpx;
  background: #fff;
}
.hot{
  padding-top: 5rpx;
}
.hot text{
  line-height: 84rpx;
  margin-bottom: 18rpx;
}
.hot-item{
  height: 82rpx;
  line-height: 82rpx;
  font-size: 25rpx;
  color: #666;
  text-indent: 12rpx;
}
.fast_order{
  line-height: 92rpx;
  color: #fb870d;
  text-align: center;
  font-size: 29rpx;
}
.nodata{
    padding-top: 100rpx;
    padding-bottom: 140rpx;
}
.nodata image{
    width: 120rpx;
    height: 120rpx;
    text-align: center;
    display: block;
    margin: 0 auto;
}
.nodata2{
    padding-top: 110rpx;
    padding-bottom: 140rpx;
}
.nodata2 image{
    width: 120rpx;
    height: 90rpx;
    text-align: center;
    display: block;
    margin: 0 auto;
}
.item_list{
  margin-top: 20rpx;
}
.item_img{
     width: 195rpx;
    height: 195rpx;
    overflow: hidden;
    position: relative;
    display: inline-block;
    vertical-align: top;
    margin: 27rpx 60rpx;
    margin-right: 100rpx;
    margin-left: 35rpx;
}
.item_img image{
  width: 100%;
  height: inherit;
}
.item_des{
    width: 340rpx;
    margin: 27rpx 0;
    display: inline-block;
    vertical-align: top;
    font-size:27rpx;
}
.item_des text{
  display: block;
}
.name{
    color: #333333;
    margin-top: 32rpx;
    font-size:27rpx;
}
.desc{
    font-size: 25rpx;
    color: #999999;
    margin:20rpx 0;
}
.price{
  font-size: 27rpx;
}
.about_serve{
    border-top: #f2f2f2 solid 20rpx;
    padding-bottom: 100rpx;
    padding-top: 25rpx;
}